<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <bei.beijingnews1020.view.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />

    <RadioGroup
        android:id="@+id/rg_main"
        android:background="@drawable/bottom_tab_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/rb_home_selector"
            android:textColor="@drawable/rb_home_textcolor_selector"
            android:drawablePadding="8dp"
            android:button="@null"
            android:id="@+id/rb_home"
            android:text="主页"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RadioButton
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/rb_news_selector"
            android:textColor="@drawable/rb_home_textcolor_selector"
            android:drawablePadding="8dp"
            android:button="@null"
            android:id="@+id/rb_news"
            android:text="新闻"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RadioButton
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/rb_setting_selector"
            android:textColor="@drawable/rb_home_textcolor_selector"
            android:drawablePadding="8dp"
            android:button="@null"
            android:id="@+id/rb_setting"
            android:text="设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>
</LinearLayout>